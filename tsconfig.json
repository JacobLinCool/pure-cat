{
    "exclude": ["**/dist/**", "**/node_modules/**", "**/src/_tests/**", "**/tsup.config.ts"],
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext"],
        "module": "ESNext",
        "moduleResolution": "node",
        "declaration": true,
        "resolveJsonModule": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "pure-cat": ["./packages/core/src/index.ts"]
        }
    }
}
